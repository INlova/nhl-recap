{
  "name": "nhl-recap",
  "version": "0.5.1",
  "description": "Check the latest NHL scores.",
  "keywords": [
    "NHL",
    "scores",
    "react"
  ],
  "author": "Harri Lehtola <peruukki@hotmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peruukki/nhl-recap.git"
  },
  "license": "MIT",
  "config": {
    "browserify_args": "app/js/app.jsx -t [ babelify reactify ] --extension=.jsx",
    "hashmark_args": "-s -r -c public -m public/assets.json -l 8 public/{name}-{hash}{ext}"
  },
  "scripts": {
    "assets": "cp app/assets/* public",
    "assets-watch": "watch 'cp app/assets/* public' app/assets",
    "browserify": "browserify $npm_package_config_browserify_args -g uglifyify | uglifyjs -c -o public/app.js",
    "prewatch": "npm run clean-build",
    "build": "npm run assets && parallelshell 'npm run css' 'npm run js'",
    "prebuild-watch": "npm run clean-build",
    "build-watch": "parallelshell 'npm run assets-watch' 'npm run css-watch' 'npm run js-watch'",
    "clean-build": "rm -rf public; mkdir public",
    "clean-dist": "cd dist && git fetch origin && git reset --hard origin/gh-pages && rm -rf *",
    "clone-dist": "[ -d 'dist' ] || git clone -b gh-pages --single-branch git@github.com:peruukki/nhl-recap.git dist",
    "commit-dist": "cd dist && git add -A . && git commit -m \"Version $npm_package_version\"",
    "copy-to-dist": "cp -r public/* dist",
    "postcopy-to-dist": "rm -f dist/assets.json",
    "css": "npm run sass | npm run hash-css && npm run inject-hashes",
    "css-watch": "npm run sass && npm run sass -- -w",
    "hash-css": "hashmark -n public/app.css $npm_package_config_hashmark_args",
    "hash-js": "hashmark -n public/app.js $npm_package_config_hashmark_args",
    "inject-hashes": "replaceinfiles -S -r public/assets.json -s public/*.html -d {dir}/{base}",
    "js": "npm run browserify | npm run hash-js && npm run inject-hashes",
    "js-watch": "watchify $npm_package_config_browserify_args -o public/app.js -v",
    "publish": "npm run build && npm run clone-dist && npm run clean-dist && npm run copy-to-dist && npm run commit-dist && npm run publish-ready",
    "publish-ready": "echo 'Publish with these commands: cd dist && git push origin gh-pages'",
    "lint": "eslint *.js app/js/*.js{,x}",
    "lint-watch": "esw -w *.js app/js/*.js{,x}",
    "sass": "node-sass app/sass/app.scss public/app.css --output-style compressed",
    "server": "http-server public -p 8000 -o",
    "start": "parallelshell 'npm run build-watch' 'npm run server'",
    "test": "npm run lint"
  },
  "dependencies": {
    "es6-promise": "^3.0.2",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "whatwg-fetch": "^0.10.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "eslint": "^1.7.3",
    "eslint-plugin-react": "^3.6.3",
    "eslint-watch": "^2.1.2",
    "hashmark": "^3.1.0",
    "http-server": "^0.8.5",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "reactify": "^1.1.1",
    "replaceinfiles": "^1.1.3",
    "uglify-js": "^2.6.1",
    "uglifyify": "^3.0.1",
    "watch": "^0.16.0",
    "watchify": "^3.6.1"
  },
  "private": true
}
